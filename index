<script>
  document.addEventListener("DOMContentLoaded", () => {
    const footerData = {
      description: "Trusted trading firm with secure Forex, Crypto, and Commodities investment.",
      whatsapp: "https://api.whatsapp.com/send?phone=+1234567890",
      address: "35 E 22nd, New York, NY 10165, USA",
      email: "support@Stoctmartket.com",
      aboutLinks: ["Our Company", "Forex", "Commodities", "Crypto", "Contact Us", "FAQs"],
      btcSources: [
        { name: "Luno", link: "https://luno.com/" },
        { name: "LocalBitcoin", link: "https://localbitcoins.com/" },
        { name: "Paxful", link: "https://paxful.com/" },
        { name: "Coinbase", link: "https://coinbase.com/" },
        { name: "Remitano", link: "https://remitano.com/" }
      ]
    };

    document.getElementById('companyDesc').textContent = footerData.description;
    document.getElementById('whatsappLink').href = footerData.whatsapp;
    document.getElementById('waIcon').href = footerData.whatsapp;
    document.getElementById('location').textContent = footerData.address;
    const emailEl = document.getElementById('email');
    emailEl.textContent = footerData.email;
    emailEl.href = `mailto:${footerData.email}`;

    const aboutLinksUl = document.getElementById('aboutLinks');
    footerData.aboutLinks.forEach(text => {
      const li = document.createElement('li');
      li.innerHTML = `<a href="#" class="footer-link">${text}</a>`;
      aboutLinksUl.appendChild(li);
    });

    const btcLinksUl = document.getElementById('btcLinks');
    footerData.btcSources.forEach(site => {
      const li = document.createElement('li');
      li.style.marginBottom = "0.5em";
      li.innerHTML = `<a href="${site.link}" target="_blank" class="footer-link">${site.name}</a>`;
      btcLinksUl.appendChild(li);
    });

    document.getElementById('copyright').textContent =
      `© ${new Date().getFullYear()} Stoctmartket. All rights reserved.`;

    document.getElementById('newsletterForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const email = document.getElementById('newsletterEmail').value.trim();
      const msg = document.getElementById('newsletterMsg');
      if(email) {
        msg.textContent = `Subscribed with: ${email}`;
        msg.style.color = 'lime';
        this.reset();
      } else {
        msg.textContent = 'Please enter a valid email.';
        msg.style.color = 'red';
      }
    });
  });
</script>

