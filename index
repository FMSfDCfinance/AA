  <script>
    (function () {
      const listCountries = [
        "United Kingdom",
        "USA",
        "Germany",
        "France",
        "Italy",
        "USA",
        "Australia",
        "Lesotho",
        "Canada",
        "Argentina",
        "Saudi Arabia",
        "Mexico",
        "Kenya",
        "Maldives",
        "Venezuela",
        "South Africa",
        "Sweden",
        "India",
        "South Africa",
        "Italy",
        "Pakistan",
        "United Kingdom",
        "South Africa",
        "Greece",
        "Cuba",
        "South Africa",
        "Portugal",
        "Austria",
        "South Africa",
        "Panama",
        "USA",
        "South Africa",
        "Netherlands",
        "Switzerland",
        "Belgium",
        "Israel",
        "Cyprus",
      ];
      const listPlans = [
        "$500",
        "$1500",
        "$1000",
        "$10,000",
        "$2000",
        "$3000",
        "$4000",
        "$600",
        "$700",
        "$2500",
      ];

      const mgm = document.querySelector(".mgm");
      const txt = mgm.querySelector(".txt");

      function showNotification() {
        const country =
          listCountries[Math.floor(Math.random() * listCountries.length)];
        const plan = listPlans[Math.floor(Math.random() * listPlans.length)];
        const message = `Someone from <b>${country}</b> just Withdrew <strong>${plan}</strong>`;
        txt.innerHTML = message;

        mgm.style.display = "block";

        setTimeout(() => {
          mgm.style.display = "none";
        }, 8000);
      }

      function scheduleNext() {
        const interval =
          Math.floor(Math.random() * (40000 - 8000 + 1)) + 8000;
        setTimeout(() => {
          showNotification();
          scheduleNext();
        }, interval);
      }

      scheduleNext();
    })();
  </script>

